<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/dot"/>
        <View
            android:layout_below="@+id/dot"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="22 July 2017"
            android:layout_marginLeft="20dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/time"
            android:layout_below="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Saturday | 12.30 PM"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_title"
            android:layout_below="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Tickets are Available"
            android:layout_marginLeft="20dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#a4a4a4"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/post_detail"
            android:layout_below="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:text="Tickets are available from today. you can collect tickets from Rabindra Sharabor at 5 pm."
            android:layout_marginLeft="20dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#a4a4a4"
            android:textStyle="normal" />
    </RelativeLayout>
</LinearLayout>